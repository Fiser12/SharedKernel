<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="LIN3S\SharedKernel\Event\StoredEvent"
            table="event"
            repository-class="LIN3S\SharedKernel\Infrastructure\Persistence\Doctrine\ORM\Event\DoctrineORMEventStore">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="type" type="string" length="150"/>
        <field name="payload" type="json_array"/>
        <field name="occurredOn" type="integer"/>
        <field name="streamName" column="stream_name" type="string" length="255"/>
    </entity>
</doctrine-mapping>
